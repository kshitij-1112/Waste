@model List<BankLoanProject.Models.LoanReportViewModel>
@{
    var role = Context.Session.GetString("Role");
    Layout = null;
}
<!-- Loan Report Section -->
<div id="loan" class="report-section table-container">
    <div class="section-header">
        <div class="section-info">
            <h4 class="mb-2">
                <i class="fas fa-file-invoice-dollar me-2"></i>
                Loan Report
            </h4>
        </div>
        <div class="export-filter-controls">
            <button class="btn btn-export" id="btnExportLoan">
                <i class="fas fa-file-pdf"></i> Export PDF
            </button>
            <div class="dropdown">
                <button class="btn btn-filter dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-filter"></i> Filter
                </button>
                <div class="dropdown-menu p-3">
                    <label class="fw-bold">By Loan Type:</label>
                    <select id="loanTypeFilter" class="form-control mb-2">
                        <option value="">All</option>
                        <option value="Home">Home</option>
                        <option value="Vehicle">Vehicle</option>
                        <option value="Personal">Personal</option>
                    </select>
                    <label class="fw-bold">By Application Date:</label>
                    <input type="date" id="applicationDateFilter" class="form-control mb-2">
                    <label class="fw-bold">By Status:</label>
                    <select id="statusFilter" class="form-control mb-2">
                        <option value="">All</option>
                        <option value="Approved">Approved</option>
                        <option value="Pending">Pending</option>
                    </select>
                    <button class="btn btn-success mt-2 w-100" id="btnApplyFilter">Apply</button>
                    <button class="btn btn-danger mt-2 w-100" id="btnClearFilter">Clear</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Rows per page -->
    <div class="table-controls d-flex justify-content-end mb-3 pe-2">
        <div class="rows-control d-flex align-items-center">
            <label for="rowsPerPageLoan" class="me-2">
                <i class="fas fa-list-ol"></i> Rows per page:
            </label>
            <select id="rowsPerPageLoan" class="form-select form-select-sm" onchange="changeRowsPerPageLoan()">
                <option value="2">2</option>
                <option value="5">5</option>
                <option value="10">10</option>
            </select>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table table-bordered" id="loanReportTable">
            <!-- Table Head and Body (unchanged for brevity) -->
        </table>
    </div>

    <div class="pagination-section">
        <div class="pagination-info" id="loanPaginationInfo"></div>
        <nav aria-label="Loan report pagination">
            <ul class="pagination" id="loanPaginationContainer"></ul>
        </nav>
    </div>
</div>
<script>
// JS includes function: changeRowsPerPageLoan(), pagination logic (as in repayment)
</script>
